            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".VueCalendrierCache" />
        <activity android:name=".VueListeCachee" />
        <activity android:name=".VueAjoutContactPrive">
            <intent-filter>
                <action android:name="com.company.package.FOO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".VueModificationSuppressionContact">
            <intent-filter>
                <action android:name="com.company.package.FOO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".VueConnexion" />
        <activity android:name=".VueModifierEvenementCache"></activity>
    </application>

</manifest>