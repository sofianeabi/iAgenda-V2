<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTelephone"
            style="?attr/editTextStyle"
            android:layout_width="417dp"
            android:layout_height="33dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_below="@+id/editTextPrenom"
            android:layout_marginTop="18dp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:hint="Téléphone"
            android:inputType="phone"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="440dp" />

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="353dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/editTextMail"
            android:layout_below="@+id/editTextMail"
            android:layout_marginTop="35dp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:hint="Note"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="622dp" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="41dp"
            android:layout_height="47dp"
            android:layout_alignBottom="@+id/editTextNote"
            android:layout_alignEnd="@+id/editTextMail"
            android:background="@drawable/linearborder"
            tools:layout_editor_absoluteX="466dp"
            tools:layout_editor_absoluteY="614dp" />

        <ImageButton
            android:id="@+id/imageButtonNote"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editTextNote"
            android:layout_marginLeft="@dimen/icons"
            android:background="@android:color/white"
            android:tint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_menu_help"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="622dp" />

        <ImageButton
            android:id="@+id/imageButtonMail"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_above="@+id/editTextNote"
            android:layout_alignStart="@+id/imageButtonAdresse"
            android:background="@android:color/white"
            android:tint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_dialog_email"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="554dp" />

        <EditText
            android:id="@+id/editTextAdresse"
            android:layout_width="417dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/editTextTelephone"
            android:layout_below="@+id/editTextTelephone"
            android:layout_marginTop="19dp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:hint="Adresse"
            android:inputType="textPostalAddress"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="497dp" />

        <EditText
            android:id="@+id/editTextNom"
            android:layout_width="417dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="33dp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:hint="Nom (obligatoire)"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="315dp" />

        <EditText
            android:id="@+id/editTextPrenom"
            android:layout_width="417dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/editTextTelephone"
            android:layout_below="@+id/imageButtonNom"
            android:layout_marginTop="19dp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:hint="Prénom"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="379dp" />

        <ImageButton
            android:id="@+id/imageButtonTelephone"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_above="@+id/editTextAdresse"
            android:layout_alignStart="@+id/imageButtonAdresse"
            android:background="@android:color/white"
            android:tint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_menu_call"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="439dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="414dp"
            android:layout_height="241dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textViewTitre"
            android:layout_marginEnd="71dp"
            android:layout_marginLeft="@dimen/icons"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="54dp" />

        <ImageButton
            android:id="@+id/imageButtonNom"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/editTextNom"
            android:layout_marginLeft="@dimen/icons"
            android:background="@android:color/white"
            android:tint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/textViewTitre"
            android:layout_width="413dp"
            android:layout_height="32dp"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editTextNom"
            android:background="@color/colorAccent"
            android:text="Ajout de contact"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="5dp" />

        <EditText
            android:id="@+id/editTextMail"
            android:layout_width="417dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/editTextAdresse"
            android:layout_below="@+id/editTextAdresse"
            android:layout_marginTop="18dp"
            android:background="@drawable/linearborder"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="555dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/boutonAjouterContactPrive"
            android:layout_width="150dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            app:srcCompat="@android:drawable/checkbox_on_background"
            tools:layout_editor_absoluteX="514dp"
            tools:layout_editor_absoluteY="718dp" />

        <ImageButton
            android:id="@+id/imageButtonAdresse"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/editTextAdresse"
            android:layout_marginLeft="@dimen/icons"
            android:background="@android:color/white"
            android:tint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_dialog_map"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="496dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>