<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projet.iagenda.iagenda.VueListeCachee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listeElementsCachesVueListeCachee"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/textVueListeCacheeVueListeCachee"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textVueListeCacheeVueListeCachee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liste Cachee"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="16dp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bouttonRetourVueListeCachee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/bouttonAjouterEvenementCacheVueListeCachee"
            android:clickable="true"
            android:visibility="visible"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:layout_editor_absoluteX="296dp"
            tools:layout_editor_absoluteY="696dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bouttonVueCalendrierVueListeCachee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bouttonAjouterEvenementCacheVueListeCachee"
            android:layout_alignParentRight="true"
            android:clickable="true"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bouttonAjouterEvenementCacheVueListeCachee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_input_add" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
