<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projet.iagenda.iagenda.VueConnexion">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/champUtilisateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Utilisateur" />

        <EditText
            android:id="@+id/champMotDePasse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/champUtilisateur"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPassword"
            android:text="password" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/boutonRetourVueConnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/boutonConnexionVueConnexion"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            app:srcCompat="?android:attr/homeAsUpIndicator" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/boutonConnexionVueConnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            app:srcCompat="@android:drawable/checkbox_on_background" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
