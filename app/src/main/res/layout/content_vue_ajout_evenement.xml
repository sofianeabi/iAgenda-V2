<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projet.iagenda.iagenda.VueAjoutEvenement"
    tools:showIn="@layout/activity_vue_ajout_evenement">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="251dp">

        <EditText
            android:id="@+id/champNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonRien"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Notes"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="633dp" />

        <EditText
            android:id="@+id/champTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Titre"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="61dp" />

        <TimePicker
            android:id="@+id/dateDebut"
            android:layout_width="200dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/boutonSelectionContact"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="179dp" />

        <EditText
            android:id="@+id/champLieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateFin"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lieu"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="389dp" />

        <QuickContactBadge
            android:id="@+id/boutonSelectionContact"
            android:layout_width="204dp"
            android:layout_height="46dp"
            android:layout_below="@+id/champTitre"
            app:srcCompat="@android:drawable/stat_sys_phone_call"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="119dp" />

        <TimePicker
            android:id="@+id/dateFin"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/dateDebut"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="281dp" />

        <RadioButton
            android:id="@+id/radioButtonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonCourses"
            android:text="Menu"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="466dp" />

        <RadioButton
            android:id="@+id/radioButtonCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/champLieu"
            android:text="Courses"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="466dp" />

        <RadioButton
            android:id="@+id/radioButtonRien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonMenu"
            android:text="Rien"
            tools:layout_editor_absoluteX="255dp"
            tools:layout_editor_absoluteY="466dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vue Ajout Evenement"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="16dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
